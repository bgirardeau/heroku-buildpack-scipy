#!/usr/bin/env bash
# This script serves as the scikits.samplerate build step of the
# [**Python Buildpack**](https://github.com/heroku/heroku-buildpack-python)
# compiler.
#
# A [buildpack](http://devcenter.heroku.com/articles/buildpacks) is an
# adapter between a Python application and Heroku's runtime.
#
# This script is invoked by [`bin/compile`](/).

# Syntax sugar.
source $BIN_DIR/utils

# If scikits.samplerate exists within requirements.txt then use binaries.
if (grep -iq -e "^\s*scikits.samplerate" requirements.txt) then

  puts-step "Noticed scikits.samplerate. Installing libsamplerate..."
  cd .heroku

  ## check whether this has happened already
  if [ -d "vendor/lib/libsamplerate.so.0" ]; then
    puts-step "Using cached libsamplerate..."
  else
    tar -xvf ${VENDORED_GIT_NAME}/libsamplerate.tar.gz > /dev/null
    pip install --use-mirrors scikits.samplerate$TARGET_SAMPLERATE_VERSION
  fi

  cd ..

fi
